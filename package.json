{
  "name": "spotify-loop-player",
  "private": true,
  "version": "0.0.0",
  "homepage": "https://justasmonkev.github.io/spotify-loop-player",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite",
    "prepare": "husky install",
    "precommit": "playwright test -c playwright-ct.config.ts && npx playwright test",
    "test-ct": "playwright test -c playwright-ct.config.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "npm run precommit"
  },
  "dependencies": {
    "@types/js-cookie": "^3.0.5",
    "axe-playwright": "^1.2.3",
    "dotenv": "^16.3.1",
    "js-cookie": "^3.0.5",
    "playwright": "^1.39.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-modal": "^3.16.1",
    "react-router-dom": "^6.18.0"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "^1.39.0",
    "@playwright/test": "^1.39.0",
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "@types/react-modal": "^3.16.2",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "@vitejs/plugin-react": "^4.1.0",
    "chokidar": "^3.5.3",
    "eslint": "^8.52.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-gh-pages": "^0.4.1"
  }
}
